{
  "compilerOptions": {
    "declaration": true,
    "declarationDir": "lib",
    "declarationMap": true,
    "lib": ["dom", "es2017", "es2018"],
    "baseUrl": "src",
    "target": "es5",
    "module": "esnext",
    "noUnusedLocals": true,
    "strict": true,
    "noUnusedParameters": true,
    "noImplicitAny": true,
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "moduleResolution": "node",
    "sourceMap": true,
    "allowJs": true,
    "jsx": "react-jsx",
  },
  "include": ["src/**/*.ts", "src/**/*.tsx"],
  "exclude": ["node_modules", "lib", "**/*.spec.ts", "**/*.spec.tsx", "**/*.stories.tsx"]
}
